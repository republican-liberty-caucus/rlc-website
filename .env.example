# ===========================================
# RLC Website Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# ===========================================
# Clerk Authentication
# ===========================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard
CLERK_WEBHOOK_SECRET=whsec_xxx

# ===========================================
# Supabase
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://xxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=xxx
SUPABASE_SERVICE_ROLE_KEY=xxx
DATABASE_URL=postgresql://postgres:xxx@db.xxx.supabase.co:5432/postgres

# ===========================================
# HighLevel V2 API
# ===========================================
HIGHLEVEL_API_KEY=xxx
HIGHLEVEL_LOCATION_ID=xxx
HIGHLEVEL_WEBHOOK_SECRET=xxx

# ===========================================
# Stripe (for donations/membership payments)
# ===========================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe Product Price IDs (recurring annual, created by scripts/stripe-setup-products.ts)
STRIPE_PRICE_STUDENT_MILITARY=price_xxx
STRIPE_PRICE_INDIVIDUAL=price_xxx
STRIPE_PRICE_PREMIUM=price_xxx
STRIPE_PRICE_SUSTAINING=price_xxx
STRIPE_PRICE_PATRON=price_xxx
STRIPE_PRICE_BENEFACTOR=price_xxx
STRIPE_PRICE_ROUNDTABLE=price_xxx

# Dues Sharing (Stripe Connect)
NATIONAL_CHARTER_ID=uuid-of-national-charter

# ===========================================
# Resend (transactional email)
# ===========================================
RESEND_API_KEY=re_xxx
RESEND_FROM_EMAIL=noreply@rlc.org

# ===========================================
# Analytics
# ===========================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ===========================================
# Cron Jobs
# ===========================================
CRON_SECRET=xxx

# ===========================================
# Application
# ===========================================
NEXT_PUBLIC_APP_URL=https://rlc.org
NODE_ENV=development
